<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
                                             xmlns:app="http://schemas.android.com/apk/res-auto"
                                             xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
                                             android:layout_height="match_parent">

    <Button
            android:text="Comment"
            android:layout_width="wrap_content"
            android:layout_height="40dp"
            android:id="@+id/submit_comment_btn_frg"
            android:background="@drawable/btn_home_forms"
            android:textColor="@color/colorAccent" android:fontFamily="@font/maiden_orange"
            android:textSize="12sp"
            app:layout_constraintTop_toTopOf="parent" app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginEnd="8dp" android:layout_marginTop="8dp"/>
    <EditText
            android:layout_width="0dp"
            android:layout_height="40dp"
            android:id="@+id/comment_field_frg"
            app:layout_constraintStart_toStartOf="parent" android:layout_marginStart="16dp"
            android:layout_marginTop="8dp"
            android:fontFamily="@font/maiden_orange" android:background="@drawable/text_field"
            android:gravity="left|center_vertical" android:paddingLeft="20dp" android:layout_marginEnd="8dp"
            app:layout_constraintEnd_toStartOf="@+id/submit_comment_btn_frg"
            android:textCursorDrawable="@color/colorPrimary" android:inputType="textLongMessage"
            android:hint="Add comment" app:layout_constraintHorizontal_bias="0.0"
            app:layout_constraintTop_toTopOf="parent"/>
    <ListView
            android:layout_width="373dp"
            android:layout_height="0dp" android:id="@+id/comments_list_fragment"
            app:layout_constraintStart_toStartOf="parent" app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            android:layout_marginStart="8dp" android:layout_marginBottom="8dp" android:layout_marginEnd="8dp"
            app:layout_constraintTop_toBottomOf="@+id/comment_field_frg" android:layout_marginTop="8dp"/>
</android.support.constraint.ConstraintLayout>