<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
            xmlns:tools="http://schemas.android.com/tools" xmlns:app="http://schemas.android.com/apk/res-auto"
            android:layout_width="match_parent"
            android:layout_height="match_parent" android:id="@+id/scroll_view" android:fillViewport="false">
    <android.support.constraint.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

        <ImageView
                android:layout_width="64dp"
                android:layout_height="62dp" app:srcCompat="@drawable/user_man" android:id="@+id/user_photo_details"
                android:layout_marginTop="8dp" app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintStart_toStartOf="parent" android:layout_marginStart="8dp"/>
        <TextView
                android:text="Bouhenniche Oussama"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/user_full_name_details" android:textSize="18sp"
                android:fontFamily="@font/maiden_orange" app:layout_constraintStart_toEndOf="@+id/user_photo_details"
                android:layout_marginStart="20dp" android:layout_marginTop="16dp"
                app:layout_constraintTop_toTopOf="parent" android:textColor="@color/colorPrimaryDark"/>
        <TextView
                android:text="Algeria"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/user_country_details" android:textSize="14sp"
                android:fontFamily="@font/maiden_orange" app:layout_constraintStart_toEndOf="@+id/user_photo_details"
                android:layout_marginStart="20dp"
                android:layout_marginTop="12dp" app:layout_constraintTop_toBottomOf="@+id/user_full_name_details"/>
        <TextView
                android:text="Collectif Iftar"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/title_details" app:layout_constraintEnd_toEndOf="parent" android:layout_marginEnd="8dp"
                app:layout_constraintStart_toStartOf="parent" android:layout_marginStart="8dp"
                android:layout_marginTop="80dp" app:layout_constraintTop_toTopOf="parent"
                android:fontFamily="@font/maiden_orange" android:textSize="30sp"
                android:textColor="@color/colorPrimaryDark"/>
        <ImageView
                android:layout_width="0dp"
                android:layout_height="280dp" app:srcCompat="@drawable/iftar"
                android:id="@+id/media_details" app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/title_details" app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintHorizontal_bias="0.642" android:scaleType="centerCrop"/>
        <android.support.constraint.ConstraintLayout android:layout_width="match_parent"
                                                     android:layout_height="wrap_content"
                                                     app:layout_constraintTop_toBottomOf="@+id/media_details"
                                                     app:layout_constraintStart_toStartOf="parent"
                                                     android:layout_marginStart="8dp"
                                                     app:layout_constraintEnd_toEndOf="parent"
                                                     android:layout_marginEnd="8dp" android:id="@+id/constraintLayout"
                                                     android:layout_marginTop="4dp">
            <Button
                    android:layout_width="30dp"
                    android:layout_height="30dp" android:id="@+id/star_btn_details"
                    android:background="@drawable/ic_star_empty"
                    app:layout_constraintTop_toTopOf="parent" app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintBottom_toBottomOf="parent"/>
            <Button
                    android:layout_width="30dp"
                    android:layout_height="30dp" android:id="@+id/comment_btn_details"
                    android:background="@drawable/ic_comment"
                    app:layout_constraintTop_toTopOf="parent"
                    app:layout_constraintStart_toEndOf="@+id/star_btn_details" android:layout_marginStart="20dp"
                    app:layout_constraintBottom_toBottomOf="parent"/>
            <Button
                    android:layout_width="30dp"
                    android:layout_height="30dp" android:id="@+id/share_btn_details"
                    android:background="@drawable/ic_share"
                    app:layout_constraintTop_toTopOf="parent"
                    app:layout_constraintStart_toEndOf="@+id/comment_btn_details" android:layout_marginStart="22dp"
                    app:layout_constraintBottom_toBottomOf="parent"/>
            <Button
                    android:text="@string/forkpostbtn"
                    android:layout_width="127dp"
                    android:layout_height="38dp"
                    android:id="@+id/fork_post_details"
                    android:textColor="@color/colorPrimary" android:fontFamily="@font/maiden_orange"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintTop_toTopOf="parent" app:layout_constraintBottom_toBottomOf="parent"
                    android:textSize="12sp" android:background="@drawable/btn_home"/>
        </android.support.constraint.ConstraintLayout>
        <TextView
                android:text="Meet other Muslims. Get together and have a forum to discuss Islam in a  non-judgmental environment. see more...       "
                android:layout_width="0dp"
                android:layout_height="wrap_content" android:id="@+id/description_details"
                app:layout_constraintEnd_toEndOf="parent" android:layout_marginEnd="8dp"
                app:layout_constraintStart_toStartOf="parent" android:layout_marginStart="8dp"
                android:layout_marginTop="8dp" app:layout_constraintTop_toBottomOf="@+id/constraintLayout"
                android:fontFamily="@font/maiden_orange" android:textColor="@color/colorPrimaryDark"/>
        <TextView
                android:text="#Iftar_Jama3i"
                android:layout_width="0dp"
                android:layout_height="wrap_content" android:id="@+id/tag_details"
                app:layout_constraintEnd_toEndOf="parent" android:layout_marginEnd="8dp"
                app:layout_constraintStart_toStartOf="parent" android:layout_marginStart="8dp"
                android:layout_marginTop="8dp" app:layout_constraintTop_toBottomOf="@+id/description_details"
                android:fontFamily="@font/maiden_orange" android:textSize="18sp"
                android:textColor="@color/colorPrimaryDark"/>
        <TextView
                android:text="105 stars"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/stars_count_details" android:layout_marginTop="8dp"
                app:layout_constraintTop_toBottomOf="@+id/tag_details" app:layout_constraintStart_toStartOf="parent"
                android:layout_marginStart="8dp"
                android:fontFamily="@font/maiden_orange"/>
        <TextView
                android:text="60 comments"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/comments_count_details" android:layout_marginTop="8dp"
                app:layout_constraintTop_toBottomOf="@+id/tag_details"
                android:layout_marginBottom="8dp"
                app:layout_constraintBottom_toBottomOf="parent" android:fontFamily="@font/maiden_orange"
                app:layout_constraintVertical_bias="0.0" app:layout_constraintStart_toEndOf="@+id/stars_count_details"
                android:layout_marginStart="44dp"/>
        <EditText
                android:layout_width="0dp"
                android:layout_height="40dp"
                android:id="@+id/comment_field"
                app:layout_constraintStart_toStartOf="parent" android:layout_marginStart="16dp"
                app:layout_constraintTop_toBottomOf="@+id/comments_count_details" android:layout_marginTop="16dp"
                android:fontFamily="@font/maiden_orange" android:background="@drawable/text_field"
                android:gravity="left|center_vertical" android:paddingLeft="20dp" android:layout_marginEnd="8dp"
                app:layout_constraintEnd_toStartOf="@+id/submit_comment_btn"
                android:textCursorDrawable="@color/colorPrimary" android:inputType="textLongMessage"
                android:hint="Add comment" app:layout_constraintHorizontal_bias="0.0"
        />
        <Button
                android:text="Comment"
                android:layout_width="wrap_content"
                android:layout_height="40dp"
                android:id="@+id/submit_comment_btn"
                android:background="@drawable/btn_home_forms"
                android:textColor="@color/colorAccent" android:fontFamily="@font/maiden_orange"
                android:textSize="12sp"
                android:layout_marginEnd="8dp"
                app:layout_constraintEnd_toEndOf="parent"
                android:layout_marginTop="16dp"
                app:layout_constraintTop_toBottomOf="@+id/comments_count_details"/>
        <ListView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                app:layout_constraintTop_toBottomOf="@+id/comment_field" android:layout_marginTop="8dp"
                app:layout_constraintStart_toStartOf="parent" android:layout_marginStart="8dp"
                app:layout_constraintEnd_toEndOf="parent" android:layout_marginEnd="8dp"
                android:id="@+id/comments_list" android:layout_marginBottom="8dp"
                app:layout_constraintBottom_toBottomOf="parent" android:touchscreenBlocksFocus="false"
                app:layout_constraintHorizontal_bias="0.0" app:layout_constraintVertical_bias="0.0"/>
        <Button
                android:text="Load more comments"
                android:layout_width="150dp"
                android:layout_height="wrap_content" android:id="@+id/load_comment_fragment_btn"
                app:layout_constraintTop_toBottomOf="@+id/comments_list" app:layout_constraintStart_toStartOf="parent"
                android:layout_marginStart="8dp" app:layout_constraintEnd_toEndOf="parent"
                android:layout_marginEnd="8dp"
                android:layout_marginTop="8dp" android:textSize="12sp" android:fontFamily="@font/maiden_orange"
                android:textColor="@color/colorAccent" android:background="@drawable/btn_home_forms"
                app:layout_constraintBottom_toBottomOf="parent" android:layout_marginBottom="8dp"/>

    </android.support.constraint.ConstraintLayout>

</ScrollView>