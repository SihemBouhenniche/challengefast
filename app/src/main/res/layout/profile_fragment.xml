<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
                                             xmlns:app="http://schemas.android.com/apk/res-auto"
                                             xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
                                             android:layout_height="match_parent">

    <TextView
            android:text="Bouhenniche Oussama"
            android:layout_width="wrap_content"
            android:layout_height="17dp"
            android:id="@+id/user_full_name_profile" android:textSize="18sp"
            android:fontFamily="@font/maiden_orange"
            android:textColor="@color/colorPrimaryDark"
            app:layout_constraintTop_toTopOf="parent" app:layout_constraintStart_toEndOf="@+id/imageView7"
            android:layout_marginStart="16dp" android:layout_marginTop="40dp"/>
    <TextView
            android:text="fo_bouhenniche@esi.dz"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="14sp"
            android:fontFamily="@font/maiden_orange"
            app:layout_constraintStart_toEndOf="@+id/imageView8"
            android:layout_marginStart="16dp" android:layout_marginTop="16dp"
            app:layout_constraintTop_toBottomOf="@+id/imageView7" android:id="@+id/email_profile"/>
    <TextView
            android:text="Algeria"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="14sp"
            android:fontFamily="@font/maiden_orange"
            app:layout_constraintTop_toBottomOf="@+id/user_full_name_profile"
            android:layout_marginTop="10dp" app:layout_constraintStart_toEndOf="@+id/imageView7"
            android:layout_marginStart="16dp" android:id="@+id/country_profile"/>
    <ImageView
            android:layout_width="100dp"
            android:layout_height="100dp" app:srcCompat="@drawable/user_man" android:id="@+id/imageView7"
            app:layout_constraintStart_toStartOf="parent"
            android:layout_marginStart="16dp" android:layout_marginTop="16dp"
            app:layout_constraintTop_toTopOf="parent"/>
    <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" app:srcCompat="@drawable/ic_email" android:id="@+id/imageView8"
            app:layout_constraintStart_toStartOf="parent"
            android:layout_marginStart="16dp" android:layout_marginTop="8dp"
            app:layout_constraintTop_toBottomOf="@+id/imageView7"/>
    <android.support.design.widget.BottomNavigationView
            app:elevation="5dp"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:background="@color/gray"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:menu="@menu/navigation_profile"
            android:layout_marginTop="8dp"
            app:layout_constraintTop_toBottomOf="@+id/email_profile" app:itemTextColor="@color/colorAccent"
            app:itemIconTint="@color/colorAccent" android:backgroundTint="@color/colorPrimary"
            android:id="@+id/navigation_profile"/>
    <ImageView
            android:layout_width="100dp"
            android:layout_height="100dp" app:srcCompat="@drawable/ic_error"
            android:id="@+id/error_img" app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginEnd="8dp" app:layout_constraintStart_toStartOf="parent"
            android:layout_marginStart="8dp" android:layout_marginTop="8dp"
            app:layout_constraintTop_toBottomOf="@+id/navigation_profile" android:layout_marginBottom="8dp"
            app:layout_constraintBottom_toBottomOf="parent"/>
    <TextView
            android:text="@string/title_no_content"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/textView4" app:layout_constraintStart_toStartOf="parent" android:layout_marginStart="8dp"
            app:layout_constraintEnd_toEndOf="parent" android:layout_marginEnd="8dp" android:layout_marginTop="8dp"
            app:layout_constraintTop_toBottomOf="@+id/error_img" android:textColor="@color/gray"/>
</android.support.constraint.ConstraintLayout>