<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
                                             xmlns:app="http://schemas.android.com/apk/res-auto"
                                             xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
                                             android:layout_height="match_parent">

    <ImageView
            android:layout_width="70dp"
            android:layout_height="70dp" app:srcCompat="@drawable/user_man" android:id="@+id/user_photo"
            android:layout_marginTop="8dp" app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toStartOf="parent" android:layout_marginStart="8dp"/>
    <TextView
            android:text="Bouhenniche Oussama"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/user_full_name_post" android:textSize="18sp"
            android:fontFamily="@font/maiden_orange" app:layout_constraintStart_toEndOf="@+id/user_photo"
            android:layout_marginStart="40dp" android:layout_marginTop="24dp"
            app:layout_constraintTop_toTopOf="parent" android:textColor="@color/colorPrimaryDark"/>
    <TextView
            android:text="Algeria"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/user_country_post" android:textSize="14sp"
            android:fontFamily="@font/maiden_orange" app:layout_constraintStart_toEndOf="@+id/user_photo"
            android:layout_marginStart="40dp"
            android:layout_marginTop="12dp" app:layout_constraintTop_toBottomOf="@+id/user_full_name_post"/>
    <TextView
            android:text="Collectif Iftar"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/title_post" app:layout_constraintEnd_toEndOf="parent" android:layout_marginEnd="8dp"
            app:layout_constraintStart_toStartOf="parent" android:layout_marginStart="8dp"
            android:layout_marginTop="80dp" app:layout_constraintTop_toTopOf="parent"
            android:fontFamily="@font/maiden_orange" android:textSize="30sp"
            android:textColor="@color/colorPrimaryDark"/>
    <ImageView
            android:layout_width="0dp"
            android:layout_height="280dp" app:srcCompat="@drawable/iftar"
            android:id="@+id/media_post" app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/title_post" app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.642"/>
    <android.support.constraint.ConstraintLayout android:layout_width="match_parent"
                                                 android:layout_height="wrap_content"
                                                 app:layout_constraintTop_toBottomOf="@+id/media_post"
                                                 app:layout_constraintStart_toStartOf="parent"
                                                 android:layout_marginStart="8dp"
                                                 app:layout_constraintEnd_toEndOf="parent"
                                                 android:layout_marginEnd="8dp" android:id="@+id/constraintLayout"
                                                 android:layout_marginTop="4dp">
        <Button
                android:layout_width="24dp"
                android:layout_height="24dp" android:id="@+id/star_btn" android:background="@drawable/star"
                app:layout_constraintTop_toTopOf="parent" app:layout_constraintStart_toStartOf="parent"
        />
        <Button
                android:layout_width="24dp"
                android:layout_height="24dp" android:id="@+id/comment_btn" android:background="@drawable/comment"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintStart_toEndOf="@+id/star_btn" android:layout_marginStart="16dp"/>
        <Button
                android:layout_width="24dp"
                android:layout_height="24dp" android:id="@+id/share_btn" android:background="@drawable/share"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintStart_toEndOf="@+id/comment_btn" android:layout_marginStart="20dp"/>
    </android.support.constraint.ConstraintLayout>
    <TextView
            android:text="Meet other Muslims. Get together and have a forum to discuss Islam in a  non-judgmental environment. see more...       "
            android:layout_width="0dp"
            android:layout_height="wrap_content" android:id="@+id/description_post"
            app:layout_constraintEnd_toEndOf="parent" android:layout_marginEnd="8dp"
            app:layout_constraintStart_toStartOf="parent" android:layout_marginStart="8dp"
            android:layout_marginTop="8dp" app:layout_constraintTop_toBottomOf="@+id/constraintLayout"
            android:fontFamily="@font/maiden_orange" android:textColor="@color/colorPrimaryDark"/>
    <TextView
            android:text="#Iftar_Jama3i"
            android:layout_width="0dp"
            android:layout_height="wrap_content" android:id="@+id/tag_post"
            app:layout_constraintEnd_toEndOf="parent" android:layout_marginEnd="8dp"
            app:layout_constraintStart_toStartOf="parent" android:layout_marginStart="8dp"
            android:layout_marginTop="8dp" app:layout_constraintTop_toBottomOf="@+id/description_post"
            android:fontFamily="@font/maiden_orange" android:textSize="18sp"
            android:textColor="@color/colorPrimaryDark"/>
</android.support.constraint.ConstraintLayout>