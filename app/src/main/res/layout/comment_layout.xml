<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
                                             xmlns:app="http://schemas.android.com/apk/res-auto"
                                             xmlns:tools="http://schemas.android.com/tools"
                                             android:layout_width="match_parent"
                                             android:layout_height="match_parent">

    <ImageView
            android:layout_width="40dp"
            android:layout_height="40dp" app:srcCompat="@drawable/user_man"
            android:id="@+id/imageView5" app:layout_constraintStart_toStartOf="parent"
            android:layout_marginStart="8dp" android:layout_marginTop="8dp" app:layout_constraintTop_toTopOf="parent"/>
    <TextView
            android:text="Bouhenniche Oussama"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/user_full_name_comment" app:layout_constraintStart_toEndOf="@+id/imageView5"
            android:layout_marginStart="8dp" android:layout_marginTop="8dp" app:layout_constraintTop_toTopOf="parent"
            android:fontFamily="@font/maiden_orange"/>
    <TextView
            android:text="TextView"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:id="@+id/comment_text" android:layout_marginTop="8dp"
            app:layout_constraintTop_toBottomOf="@+id/imageView5" app:layout_constraintStart_toStartOf="parent"
            android:layout_marginStart="8dp" app:layout_constraintEnd_toEndOf="parent" android:layout_marginEnd="8dp"
            android:fontFamily="@font/maiden_orange" android:textColor="@color/colorPrimaryDark"
            android:paddingBottom="10dp"/>
    <TextView
            android:text="Algeria"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/user_country_comment"
            android:fontFamily="@font/maiden_orange" android:layout_marginTop="8dp"
            app:layout_constraintTop_toBottomOf="@+id/user_full_name_comment"
            app:layout_constraintStart_toEndOf="@+id/imageView5" android:layout_marginStart="8dp"/>
</android.support.constraint.ConstraintLayout>