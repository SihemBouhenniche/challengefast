<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        xmlns:tools="http://schemas.android.com/tools"
        android:id="@+id/container"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".Activities.NavigationActivity">
    <android.support.constraint.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="56dp" app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" android:elevation="10dp"
            android:background="@drawable/shadow_bcg" android:id="@+id/constraintLayout3">

        <ImageView
                android:layout_width="85dp"
                android:layout_height="0dp" app:srcCompat="@drawable/logo"
                android:id="@+id/imageView3" app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintBottom_toBottomOf="parent"/>
        <ImageView
                android:layout_width="70dp"
                android:layout_height="0dp"
                app:srcCompat="@drawable/user_man"
                android:clickable="true"
                android:id="@+id/user_top_logo" app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintBottom_toBottomOf="parent" android:layout_marginTop="10dp"
                android:layout_marginBottom="10dp"/>
    </android.support.constraint.ConstraintLayout>

    <ProgressBar
            android:layout_width="80dp"
            android:layout_height="80dp"
            android:id="@+id/loader_posts"
            android:background="@drawable/rotate_spinner" android:progressDrawable="@drawable/rotate_spinner"
            android:indeterminateDrawable="@drawable/rotate_spinner"
            app:layout_constraintStart_toStartOf="@+id/frame_container" android:layout_marginEnd="8dp"
            app:layout_constraintEnd_toEndOf="@+id/frame_container" android:layout_marginTop="8dp"
            app:layout_constraintTop_toTopOf="@+id/constraintLayout3" android:layout_marginBottom="8dp"
            app:layout_constraintBottom_toBottomOf="parent" android:visibility="gone"/>
    <FrameLayout
            android:layout_width="0dp"
            android:layout_height="0dp"
            app:layout_constraintTop_toBottomOf="@+id/constraintLayout3"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent" android:id="@+id/frame_container"
            tools:visibility="visible"
            app:layout_constraintBottom_toTopOf="@+id/navigation">

    </FrameLayout>
    <android.support.design.widget.BottomNavigationView
            android:theme="@style/Widget.BottomNavigationView"
            app:elevation="5dp"
            android:id="@+id/navigation"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:background="@color/gray"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:menu="@menu/navigation">
    </android.support.design.widget.BottomNavigationView>

</android.support.constraint.ConstraintLayout>